{
  "builders": [    
    {
      "boot_command": [
        "<up><wait><tab> text ks=http://{{ .HTTPIP }}:{{ .HTTPPort }}/{{user `ks_path`}}<enter><wait>"
      ],
      "boot_wait": "10s",
      "cpus": "{{ user `cpus` }}",
      "guest_os_type": "oracleLinux8_64Guest",
      "http_directory": "{{user `http_directory`}}",
      "iso_checksum": "{{user `iso_checksum`}}",
      "iso_url": "{{user `mirror`}}/{{user `mirror_directory`}}/{{user `iso_name`}}",
      "ram": "{{ user `memory` }}",
      "shutdown_command": "echo 'vagrant' | sudo -S /sbin/halt -h -p",
      "ssh_password": "vagrant",
      "ssh_port": 22,
      "ssh_timeout": "10000s",
      "ssh_username": "vagrant",
      "type": "vsphere-iso",
      "vm_name": "{{ user `template` }}",
      "vcenter_server": "{{ user `vcenter_address` }}",
      "username": "{{ user `vcenter_user` }}",
      "password": "{{ user `vcenter_password` }}",
      "host": "{{ user `vcenter_host` }}",
      "datacenter": "{{ user `vcenter_dc` }}",
      "datastore": "{{ user `vcenter_datastore` }}",
      "cluster": "{{ user `vcenter_cluster` }}",
      "folder": "{{ user `vcenter_folder` }}",
      "insecure_connection": "{{ user `vcenter_ignore_ssl` }}",
      "network_adapters": [
        {
          "network": "{{ user `vcenter_network` }}",
          "network_card": "vmxnet3"
        }
      ],
      "disk_controller_type": "pvscsi",
      "storage": [
        {
          "disk_size": "{{user `disk_size`}}",
          "disk_thin_provisioned": true
        }
      ],
      "convert_to_template": true
    }
  ],
  "provisioners": [
    {
      "environment_vars": [
        "HOME_DIR=/home/vagrant",
        "http_proxy={{user `http_proxy`}}",
        "https_proxy={{user `https_proxy`}}",
        "no_proxy={{user `no_proxy`}}"
      ],
      "execute_command": "echo 'vagrant' | {{.Vars}} sudo -S -E sh -eux '{{.Path}}'",
      "expect_disconnect": true,
      "scripts": [
        "{{template_dir}}/../centos/scripts/update.sh",
        "{{template_dir}}/../centos/scripts/networking.sh",
        "{{template_dir}}/../_common/motd.sh",
        "{{template_dir}}/../_common/sshd.sh",
        "{{template_dir}}/../_common/vagrant.sh",
        "{{template_dir}}/../_common/virtualbox.sh",
        "{{template_dir}}/../_common/vmware.sh",
        "{{template_dir}}/../_common/parallels.sh",
        "{{template_dir}}/../_common/custom.sh",
        "{{template_dir}}/../centos/scripts/custom.sh",
        "{{template_dir}}/../centos/scripts/cleanup.sh",
        "{{template_dir}}/../_common/minimize.sh",
        "{{template_dir}}/../_common/last-step.sh"
      ],
      "type": "shell"
    }
  ],
  "variables": {
    "box_basename": "oracle-8.3",
    "build_directory": "../../builds",
    "build_timestamp": "{{isotime \"2019102650405\"}}",
    "cpus": "1",
    "disk_size": "65536",
    "git_revision": "__unknown_git_revision__",
    "guest_additions_url": "",
    "headless": "",
    "http_directory": "{{template_dir}}/../centos/http",
    "http_proxy": "{{env `http_proxy`}}",
    "https_proxy": "{{env `https_proxy`}}",
    "hyperv_generation": "1",
    "hyperv_switch": "{{env `hyperv_switch`}}",
    "iso_checksum": "771e383adfd5406d1a360ff24822011a88cbb45b6019e2f1095758c46a406aaa",
    "iso_name": "OracleLinux-R8-U3-x86_64-dvd.iso",
    "ks_path": "8/ks.cfg",
    "memory": "1024",
    "mirror": "http://mirrors.dotsrc.org/oracle-linux",
    "mirror_directory": "OL8/u3/x86_64",
    "name": "oracle-8.3",
    "no_proxy": "{{env `no_proxy`}}",
    "template": "oracle-8.3-x86_64",
    "vcenter_address": "10.40.4.10",
    "vcenter_user": "administrator@vsphere.local",
    "vcenter_password": "vmw@re",
    "vcenter_dc": "MyDC",
    "vcenter_cluster": "MyCluster",
    "vcenter_host": "10.0.0.1",
    "vcenter_datastore": "datastore_1",
    "vcenter_folder": "MyTemplatesFolder",
    "vcenter_network": "VMwareNetwork",
    "vcenter_ignore_ssl": "true",
    "version": "TIMESTAMP"
  }
}
